# ============================================
# CONFIGURACIÓN PRINCIPAL DEL PROYECTO
# ============================================

# Nombre del proyecto (usado para contenedores)
COMPOSE_PROJECT_NAME=wordpress-dev

# Usuario y grupo para permisos (Linux/WSL)
PUID=1000
PGID=1000

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ============================================

POSTGRES_DB=wordpress_database
POSTGRES_USER=wp_admin
POSTGRES_PASSWORD=SecurePassword123!@#

# ============================================
# CONFIGURACIÓN DE WORDPRESS
# ============================================

# Prefijo de tablas de WordPress
WP_TABLE_PREFIX=wp_

# Debug mode (true/false) - usar 'false' en producción
WP_DEBUG=false

# Configuración de administrador WordPress
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=AdminSecurePass456!
WP_ADMIN_EMAIL=admin@tusitio.local

# Información del sitio
WP_SITE_TITLE=Mi Sitio WordPress
WP_SITE_URL=http://localhost:8080

# ============================================
# CONFIGURACIÓN DE PUERTOS
# ============================================

# Puerto para WordPress (HTTP)
WORDPRESS_PORT=8080

# Puerto para WordPress (HTTPS) - opcional
WORDPRESS_SSL_PORT=8443

# Puerto para Adminer (gestión de base de datos)
ADMINER_PORT=8090

# ============================================
# CONFIGURACIÓN DE RENDIMIENTO
# ============================================

# Límite de memoria para PHP
PHP_MEMORY_LIMIT=512M

# Tamaño máximo de archivos a subir
MAX_FILE_SIZE=100M

# Contraseña para Redis (cache)
REDIS_PASSWORD=RedisSecurePass789

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Claves de autenticación de WordPress (genera nuevas en: https://api.wordpress.org/secret-key/1.1/salt/)
# IMPORTANTE: Cambia estas claves antes de instalar
WP_AUTH_KEY=pon-aqui-tu-clave-unica-auth
WP_SECURE_AUTH_KEY=pon-aqui-tu-clave-unica-secure-auth
WP_LOGGED_IN_KEY=pon-aqui-tu-clave-unica-logged-in
WP_NONCE_KEY=pon-aqui-tu-clave-unica-nonce
WP_AUTH_SALT=pon-aqui-tu-salt-unica-auth
WP_SECURE_AUTH_SALT=pon-aqui-tu-salt-unica-secure-auth
WP_LOGGED_IN_SALT=pon-aqui-tu-salt-unica-logged-in
WP_NONCE_SALT=pon-aqui-tu-salt-unica-nonce

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================

# Mostrar errores PHP (true/false)
PHP_DISPLAY_ERRORS=false

# Nivel de logging
PHP_LOG_ERRORS=true

# Timezone
TIMEZONE=Europe/Madrid

# ============================================
# CONFIGURACIÓN DE BACKUP
# ============================================

# Directorio para backups automáticos
BACKUP_PATH=./backups

# ============================================
# CONFIGURACIÓN AVANZADA (OPCIONAL)
# ============================================

# Límites de conexiones Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Configuración de SSL (si se usa HTTPS)
SSL_CERTIFICATE_PATH=./ssl/cert.pem
SSL_PRIVATE_KEY_PATH=./ssl/private.key

# ============================================
# NOTAS IMPORTANTES:
# ============================================
# 1. Cambia TODAS las contraseñas por defecto
# 2. Genera nuevas claves de WordPress en: https://api.wordpress.org/secret-key/1.1/salt/
# 3. En producción, establece WP_DEBUG=false y PHP_DISPLAY_ERRORS=false
# 4. Asegúrate de que los puertos no estén en uso
# 5. PUID y PGID deben coincidir con tu usuario de Linux (ejecuta 'id' para verlos)